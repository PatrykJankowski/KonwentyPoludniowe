{
  "extends": "../tslint.json",
  "rules": {
    "indent": [true, "spaces", 2],
    "max-line-length": [true, 180],
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "page",
      "kebab-case"
    ]
  }
}
